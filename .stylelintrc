{
  "extends": "stylelint-config-standard",
  "plugins": ["stylelint-order"],
  "rules": {
    "order/properties-alphabetical-order": true,
    "declaration-colon-newline-after": null,
    "value-list-comma-newline-after": null,
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "extend",
          "include",
          "mixin",
          "for",
          "function",
          "if",
          "warn",
          "return"
        ]
      }
    ]
  }
}
